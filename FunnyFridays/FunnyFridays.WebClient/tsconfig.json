/*
	Данный файл определяет настройки для компилятора TypeScript. 
	Опция "compilerOptions" устанавливает параметры компиляции. А опция "exclude" исключает из компиляции папку node_modules, которая содержит все загруженные пакеты.
	*/
{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "es2015", "dom" ],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"node_modules/@types/"
		]
	},
	"exclude": [
		"node_modules"
	]
}
